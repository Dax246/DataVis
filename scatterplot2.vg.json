{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/Dax246/DataVis/main/cost_of_living_final.csv"
  },
  "transform":[
    {
      "calculate": "datum.Country == 'Australia' ? 'Australia' : datum.Continent",
      "as": "HighlightGroup"
    },
    {
      "calculate": "datum.Apt3BedroomNoCityCtr / datum.AvgMonthlyNetSalary",
      "as": "PricePerSalary"
    },
    {"filter": "datum.PricePerSalary > 0 && datum.PricePerSalary < 3"},
    {"filter": "datum.MortgageInterest > 0 && datum.MortgageInterest < 15"}
  ],
  "params": [
    {
      "name": "highlight_selector",
      "select": {"type": "point", "fields": ["HighlightGroup"]},
      "bind": "legend"
    }
  ],
  "layer": [
    {
      "mark": "point",
      "encoding": {
        "x": {
          "field": "PricePerSalary",
          "type": "quantitative",
          "title": "Rent for 3 Bedroom Apartment Outside the City per Average Net Monthly Salary",
          "axis": {"tickCount": 7},
          "scale": {"type": "linear"}
        },
        "y": {
          "field": "MortgageInterest",
          "title": "Mortgage Interest Percentage",
          "type": "quantitative",
          "axis": {"tickCount": 6},
          "scale": {"type": "linear"}
        },
        "opacity": {
          "condition": {"param": "highlight_selector", "value": 0.8},
          "value": 0.13
        },
        "color": {
          "field": "HighlightGroup",
          "type": "nominal",
          "scale": {
            "domain": ["North America", "South America", "Europe", "Africa", "Asia", "Oceania", "Australia"],
            "range": ["#e41a1c", "#984ea3", "#ff7f00", "#FF00FE", "#377eb8", "#2bb81c", "#000000"]
          },
          "legend": {
            "title": "Highlight Selector",
            "titleFontSize": 10,
            "labelFontSize": 8
          }
        },
        "fill": {
          "field": "HighlightGroup",
          "type": "nominal",
          "scale": {
            "domain": ["North America", "South America", "Europe", "Africa", "Asia", "Oceania", "Australia"],
            "range": ["#e41a1c", "#984ea3", "#ff7f00", "#FF00FE", "#377eb8", "#2bb81c", "#000000"]
          },
          "legend": {"title": "Highlight Selector"}
        },
        "size": {"value": 40},
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "PricePerSalary", "type": "quantitative", "title": "Rent for 3 Bedroom Apt Outside the City / Monthly Salary", "format": ".2f"},
          {"field": "MortgageInterest", "type": "quantitative", "format": ".2f"}
        ]
      }
    }
  ]
}
