{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/Dax246/DataVis/main/cost_of_living_final.csv"
    },
    "width": "container",
    "height": 400,
    "transform": [
        {
            "calculate": "datum.Wine * 2",
            "as": "Wine2People"
        },
        {
            "calculate": "datum.Cinema * 2",
            "as": "Cinema2People"
        },
        {
            "calculate": "datum.Taxi1km * 10",
            "as": "TaxiTrip"
        },
      {
        "fold": ["TaxiTrip", "Wine2People", "Meal2People", "Cinema2People", "Jeans"],
        "as": ["Product", "Value"]
      },
      {
        "filter": "datum.Country === 'Australia' || datum.Country === 'France' || datum.Country === 'New Zealand' || datum.Country === 'United States of America' || datum.Country === 'United Kingdom'"
      }
    ],
    "mark": "bar",
    "encoding": {
      "x": {
        "field": "Country",
        "type": "nominal",
        "axis": {
          "labelAngle": -45
        }
      },
      "y": {
        "field": "Value",
        "type": "quantitative",
        "title": "$"
      },
      "color": {
        "field": "Product",
        "type": "nominal",
        "title": "Product"
      },
      "tooltip": [
        {"field": "Country", "type": "nominal"},
        {"field": "Product", "type": "nominal"},
        {"field": "Value", "type": "quantitative", "format": ".2f"}
      ]
    }
  }
  