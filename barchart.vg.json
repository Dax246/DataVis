{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/Dax246/DataVis/main/cost_of_living_final.csv"
  },
  "width": "container",
  "height": 400,
  "params": [
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection "
      },
      "value": null
    }
  ],
  "layer": [
    {
      "transform": [
        {"filter": "datum.McMeal > 0 && Continent_selection !== null"},
        {"filter": "datum.Continent == Continent_selection"}
      ],
      "mark": "bar",
      "encoding": {
        "x": {"field": "Country", "type": "nominal", "axis": {
          "labelAngle": -45
        }},
        "y": {"field": "McMeal", "type": "quantitative", "title": "Cost"},
        "color": {
          "condition": {"test": "datum.Country === 'Australia'", "value": "Green"},
          "value": "steelblue"
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "McMeal", "type": "quantitative", "title": "Price of McMeal", "format": ".2f"}
        ]
      }
    },
    {
      "transform": [
        {"filter": "datum.McMeal > 0 && Continent_selection === null"},
        {"aggregate": [{"op": "mean", "field": "McMeal", "as": "mean_McMeal"}], "groupby": ["Continent"]}
      ],
      "mark": "bar",
      "encoding": {
        "x": {"field": "Continent", "type": "nominal", "axis": {
          "labelAngle": -45
        }},
        "y": {"field": "mean_McMeal", "type": "quantitative", "title": "Average Cost"},
        "color": {"value": "steelblue"},
        "tooltip": [
          {"field": "Continent", "type": "nominal"},
          {"field": "mean_McMeal", "type": "quantitative", "title": "Average Price of McMeal", "format": ".2f"}
        ]
      }
    }
  ]
}
