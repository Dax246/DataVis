{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "projection": {"type": "equalEarth"},
  "width": "container",
  "height": 400,
  "data": {
    "url": "Global_map.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  }, 
  "params": [
    {
      "name": "selectedProduct",
      "bind": {
        "input": "select",
        "options": ["Milk", "Bread", "Eggs", "McMeal", "Taxi1km", "Cinema", "Apt1BedroomCityCtr", "AvgMonthlyNetSalary"],
        "name": "Select Product "
      }
    }
  ],
  "transform": [
    {
      "fold": ["Milk", "Bread", "Eggs", "McMeal", "Taxi1km", "Cinema", "Apt1BedroomCityCtr", "AvgMonthlyNetSalary"],
      "as": ["Product", "Value"]
    },
    {
      "filter": "datum.Product == selectedProduct"
    }
  ],
  "layer":[
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "data": {
        "url": "Global_map.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
  {
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/Dax246/DataVis/main/cost_of_living_final.csv"
        },
        "key": "Country",
        "fields": ["Milk", "Bread", "Eggs", "McMeal", "Taxi1km", "Cinema", "Apt1BedroomCityCtr", "AvgMonthlyNetSalary"]
      }
    },
    {
      "calculate": "datum[selectedProduct]",
      "as": "chosenProductValue"
    }
    ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "chosenProductValue",
      "type": "quantitative",
      "scale": {"type": "linear"},
      "title": "Value of Selected Product"
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "chosenProductValue", "type": "quantitative", "title": "Value", "format": ".2f"}
    ]
  }
}
]
}