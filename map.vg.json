{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Average Monthly Net Salary",
  "width": 900,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "Global_map.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "layer":[
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "data": {
        "url": "Global_map.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
  {
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "averaged_data.csv"
        },
        "key": "country",
        "fields": ["AvgMonthlyNetSalary"]
      }
    },
    {"calculate": "datum.AvgMonthlyNetSalary", "as": "Average Monthly Net Salary"}
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Average Monthly Net Salary",
      "type": "quantitative",
      "scale": {"type": "log"}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Average Monthly Net Salary", "type": "quantitative"}
    ]
  }
}
]
}