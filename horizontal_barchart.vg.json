{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/Dax246/DataVis/main/cost_of_living_final.csv"
      },
    "transform": [
    {"filter": "datum.Country === 'Australia'"},
    {
        "calculate": "datum.Attribute === 'Bread' || datum.Attribute === 'Eggs' || datum.Attribute === 'Milk' ? datum.Attribute: 'Other'", 
        "as": "display_categories"
    }
    ],
    "vconcat": [
      {
        "mark": "bar",
        "encoding": {
          "x": {
            "field": "Milk",
            "type": "quantitative",
            "title": "Milk",
            "axis": {"orient": "bottom", "labels": false, "ticks": false}
          },
          "y": {"field": "Country", "type": "ordinal", "title": null},
          "color": {"value": "blue"}
        }
      }
    ],
    "config": {
      "view": {"stroke": null},
      "axis": {"grid": false}
    }
  }
  